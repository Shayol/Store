<div class="owl-carousel">
<% @books.each do |book| %>
  <div>
    <div class="row">
      <div class="col-md-12">
        <strong><%= book.title %></strong> <span>by <%= book.author.firstname %> <%= book.author.lastname %></span>
      </div>
   </div>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag book.image.thumb %>
    </div>
    <div class="col-md-8">
    <div class="col-md-8">
      <%= book.description %>
    </div>
    <div class="col-md-8">
      <div class="col-md-4">
        <h3>$<%= book.price %></h3>
      </div>
      <div class="col-md-8 ">
        <%= render "books/add_book", book: book %>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
</div>



