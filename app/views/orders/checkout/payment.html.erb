<%= render "checkout_menu" %>
<div class="row">
  <div class="col-md-4">
    <h3>Credit card</h3>
  </div>
  <div class="col-md-8 text-right">
   <h3>ORDER SUMMARY</h3>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= form_for @form, method: :put, url: wizard_path do |f| %>
      <% if @form.errors.any? %>
        <% @form.errors.full_messages.each do |msg| %>
          <p class="alert"> <%= msg %> </p>
        <% end %>
      <% end %>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_field :card_firstname, placeholder: "First name", value: current_or_guest_user.current_order.billing_address.firstname, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_field :card_lastname, placeholder: "Last name", value: current_or_guest_user.current_order.billing_address.lastname, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_field :card_number, placeholder: "Card number", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
      <p>Expiration date</p>
        <%= f.select :card_expiration_month, CreditCard::EXPIRATION_MONTH, include_blank: "Month", class: "form-control" %>
        <%= f.select :card_expiration_year, CreditCard::EXPIRATION_YEAR, include_blank: "Year", class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.text_field :card_CVV, placeholder: "cvv", class: "form-control" %>
      </div>
    </div>
  </div>
  <%= render "summary_order" %>
  </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.submit "Save and continue", class: "btn btn-default" %>
      </div>
    </div>
    <% end %>