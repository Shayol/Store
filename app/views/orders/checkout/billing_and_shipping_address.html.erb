<div class="row">
  <div class="col-md-4">
    <div class="col-md-8">
      BILLING ADDRESS
    </div>
    <%= form_for @billing_address, method: :put, url: wizard_path do |f| %>
      <% if @billing_address.errors.any? %>
        <% @billing_address.errors.full_messages.each do |msg| %>
          <p class="alert"> <%= msg %> </p>
        <% end %>
      <% end %>
    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :firstname, placeholder: "First name" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :lastname, placeholder: "Last name" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :address, placeholder: "Street address" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :city, placeholder: "City" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.select :country_id, Country.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :zipcode, placeholder: "Zip" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= f.text_field :phone, placeholder: "Phone" %>
      </div>
    </div>
    <%= hidden_field_tag 'address_type', 'billing' %>
    <div class="row">
      <div class="col-md-8">
        <%= f.submit "Save and continue" %>
      </div>
    </div>
    <% end %>
  </div>

