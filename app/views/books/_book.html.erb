<div class="col-md-4">
  <div class="row">
  <%= link_to book_path(book) do %>
    <div class="col-md-10 text-center">
      <%= image_tag book.image.thumb %>
    </div>
    <div class="col-md-10 text-center">
      <%= book.title.titleize %>
    </div>
  <% end %>
    <div class="col-md-10 text-center">
      <strong>$<%= book.price %></strong>
    </div>
  </div>
</div>
