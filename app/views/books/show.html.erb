<div class="row">
  <div class="col-md-6">
    <h1><%= @book.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.image %>
  </div>
  <div class="col-md-8">
    <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <strong><%= @book.price %> $</strong>
    </div>
    <div class="col-md-6 col-md-offset-2 text-right">
      <%= render "add_book", book: @book %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-11">
      <%= @book.description %>
    </div>
  </div>
</div>
</div>

