      <%= f.text_field :firstname, placeholder: "First name" %>
    </div>
    </div>
    <div class="row">
    <div class="col-md-6">
      <%= f.text_field :lastname, placeholder: "Last name" %>
    </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.text_field :address, placeholder: "Street address" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.text_field :city, placeholder: "City" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.select :country_id, Country.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.text_field :zipcode, placeholder: "Zip" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.text_field :phone, placeholder: "Phone" %>
      </div>
    </div>
    <%= hidden_field_tag 'address_type', 'shipping' %>
    <div class="row">
    <div class="col-md-2">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
    </div>
    <% end %>

  </div>
  </div>
