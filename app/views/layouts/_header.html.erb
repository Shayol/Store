<div class="row header">
  <div class="col-md-2">
    <strong class="store_name"> The Bookstore </strong>
  </div>
  <div class="col-md-2">
    <%= link_to "HOME", root_path %> | <%= link_to "SHOP", books_path %>
  </div>
  <div class="col-md-4">
  <%= form_tag search_path, class: "form-inline" do %>
    <%= search_field_tag 'search', nil, class: "form-control", placeholder:"search book by title, author" %>
  <%= submit_tag "Search", class: "btn btn-success" %>
  <% end %>

  </div>
  <div class="col-md-2 text-right">
  <% if current_or_guest_user && current_or_guest_user.orders.in_progress %>
    <%= link_to cart_path do %>
      <i class="fa fa-shopping-cart">
        CART(<%= current_or_guest_user.current_order.order_items.count %>)
          <%= number_to_currency(current_or_guest_user.current_order.total_price) %>
      </i>
    <% end %>
    <% else %>
    <i class="fa fa-shopping-cart">
      CART(EMPTY)
    </i>
  <% end %>
  </div>
  <div class="col-md-2 text-right">
    <% if user_signed_in? %>
      <%= link_to "Settings", settings_path %> |
      <%= link_to "Orders", orders_path %> |
      <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <%else%>
      <%= link_to 'Sign in', new_user_session_path %> |
      <%= link_to 'Sign up', new_user_registration_path %>
    <% end %>
  </div>
</div>